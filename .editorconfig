# This file is for unifying the coding style for different editors and IDEs.
# More information at http://editorconfig.org
# See https://github.com/RehanSaeed/EditorConfig for samples

##########################################
# Common Settings
##########################################

root = true

# All Files
[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

##########################################
# File Extension Settings
##########################################

# Dockerfiles
[{Dockerfile,Dockerfile.*,*.Dockerfile}]
trim_trailing_whitespace = false

# YAML Files and JSON files
[*.{yml,yaml,json,yml.*,yaml.*,json.*}]
indent_size = 2

# YAML Files
[*.{yml,yaml}]

# Markdown Files
[*.{md,mdx}]
indent_size = 2
trim_trailing_whitespace = false

# Web Files
[*.{htm,html,js,jsm,ts,tsx,cjs,cts,ctsx,mjs,mts,mtsx,css,sass,scss,less,pcss,svg,vue}]
indent_size = 4

[*.{tf,tfvars,tpl}]
indent_size = 2

# Bash Files
[{**.sh,**.env,.bash*,etc/**/.bash*,etc/profile}]
end_of_line = lf
indent_size = 2

# Makefiles
[Makefile]
indent_style = tab

[.gitconfig]
indent_style = tab

[{.git/config,**/.git/config}]
indent_style = tab

[.ssh/config]
indent_size = 2
